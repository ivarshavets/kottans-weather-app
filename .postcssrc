{
  "plugins": {
    "autoprefixer": true,
    "postcss-simple-vars": true,
    "postcss-preset-env" : {
      stage: 2,
      browsers: [
        '>0.25%',
        'not ie 11',
        'not op_mini all'
      ],
      features: {
        'custom-properties': {
          strict: false,
          warnings: false,
          preserve: true
        },
        'custom-media-queries': true
      }
    },
  }
}
